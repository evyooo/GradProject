<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".todo.TodoFragment">


    <HorizontalScrollView
        android:id="@+id/scrollView4"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:scrollbars="none"
        app:layout_constraintTop_toBottomOf="@+id/title_imageview_todo">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button2"
                android:layout_width="56dp"
                android:layout_height="36dp"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"
                android:background="@drawable/filter_default"
                android:fontFamily="@font/regularnanumsquareround"
                android:text="전체"
                android:textColor="@android:color/black"
                android:textSize="13dp" />

            <Button
                android:id="@+id/button3"
                android:layout_width="56dp"
                android:layout_height="36dp"
                android:layout_marginLeft="11dp"
                android:layout_weight="1"
                android:background="@drawable/filter_default"
                android:fontFamily="@font/regularnanumsquareround"
                android:text="오늘"
                android:textColor="@android:color/black"
                android:textSize="13dp" />

            <Button
                android:id="@+id/button4"
                android:layout_width="61dp"
                android:layout_height="36dp"
                android:layout_marginLeft="11dp"
                android:background="@drawable/filter_default"
                android:fontFamily="@font/regularnanumsquareround"
                android:text="이번주"
                android:textColor="@android:color/black"
                android:textSize="13dp" />

            <Button
                android:id="@+id/button5"
                android:layout_width="56dp"
                android:layout_height="36dp"
                android:layout_marginLeft="11dp"
                android:layout_weight="1"
                android:background="@drawable/filter_default"
                android:fontFamily="@font/regularnanumsquareround"
                android:text="과거"
                android:textColor="@android:color/black"
                android:textSize="13dp" />

            <Button
                android:id="@+id/button6"
                android:layout_width="74dp"
                android:layout_height="36dp"
                android:layout_marginLeft="11dp"
                android:layout_weight="1"
                android:background="@drawable/filter_default"
                android:fontFamily="@font/regularnanumsquareround"
                android:text="기한없음"
                android:textColor="@android:color/black"
                android:textSize="13dp" />

            <Button
                android:id="@+id/button7"
                android:layout_width="56dp"
                android:layout_height="36dp"
                android:layout_marginLeft="11dp"
                android:layout_weight="1"
                android:background="@drawable/filter_default"
                android:fontFamily="@font/regularnanumsquareround"
                android:text="완료"
                android:textColor="@android:color/black"
                android:textSize="13dp" />
        </LinearLayout>
    </HorizontalScrollView>

    <ImageView
        android:id="@+id/title_imageview_todo"
        android:layout_width="0dp"
        android:layout_height="65dp"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/titlebar" />

    <TextView
        android:id="@+id/title_textview_todo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="오늘의 할 일"
        android:textColor="@android:color/black"
        android:textSize="21dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/add_imageview_todo"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:scaleType="fitXY"
        android:src="@drawable/shadow_under"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ListView
        android:id="@+id/listview_todolist"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="40dp"
        android:divider="@android:color/transparent"
        android:listSelector="@android:color/transparent"
        app:layout_constraintBottom_toTopOf="@+id/add_imageview_todo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scrollView4">

    </ListView>

    <TextView
        android:id="@+id/textView61"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:fontFamily="@font/regularnanumsquareround"
        android:text="Add a task"
        android:textColor="#D9D9D9"
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView22"
        app:layout_constraintStart_toEndOf="@+id/imageView22"
        app:layout_constraintTop_toTopOf="@+id/imageView22" />

    <ImageView
        android:id="@+id/imageView22"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="2dp"
        android:src="@drawable/plusshadow"
        app:layout_constraintBottom_toBottomOf="@+id/add_imageview_todo"
        app:layout_constraintStart_toStartOf="@+id/add_imageview_todo"
        app:layout_constraintTop_toBottomOf="@+id/listview_todolist" />

    <ImageView
        android:id="@+id/more_imageview_todo"
        android:layout_width="52dp"
        android:layout_height="67dp"
        android:src="@drawable/icon_more"
        app:layout_constraintEnd_toEndOf="@+id/title_imageview_todo"
        app:layout_constraintTop_toTopOf="@+id/title_imageview_todo" />
</androidx.constraintlayout.widget.ConstraintLayout>